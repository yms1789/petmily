<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img_main_Top_Logo"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_logo_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/img_main_Top_Logo"
        app:layout_constraintEnd_toStartOf="@+id/img_main_Top_Logo"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_main_Top_Logo"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_cardview_grey_shape"
        app:layout_constraintHorizontal_bias="0.04"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하동혁거세"
        style="@style/BlackMediumText"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile"
        />

    <TextView
        android:id="@+id/tv_upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4시간 전"
        style="@style/GreyLightText"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_tools_tv_content"
        style="@style/BlackLightText"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_board_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_content"
        app:layout_constraintStart_toStartOf="@+id/tv_comment_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_comment_content"
        />

    <ToggleButton
        android:id="@+id/btn_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/feed_btn_favorite"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/vp_board_img"
        app:layout_constraintStart_toStartOf="@+id/vp_board_img"
        />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/btn_like"
        app:layout_constraintStart_toEndOf="@+id/btn_like"
        app:layout_constraintTop_toTopOf="@+id/btn_like" />

    <ToggleButton
        android:id="@+id/btn_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/feed_btn_bookmark"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/iv_comment"
        app:layout_constraintStart_toEndOf="@+id/iv_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_comment" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/ci_board_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ci_drawable="@drawable/custom_circle_indicator_main_color"
        app:layout_constraintTop_toTopOf="@+id/btn_bookmark"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bookmark"
        app:layout_constraintStart_toStartOf="@+id/vp_board_img"
        app:layout_constraintEnd_toEndOf="@+id/vp_board_img"
        />
</androidx.constraintlayout.widget.ConstraintLayout>