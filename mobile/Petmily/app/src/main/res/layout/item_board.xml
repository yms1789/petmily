<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="40dp">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_cardview_shape"
        app:layout_constraintHorizontal_bias="0.04"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하동혁거세"
        style="@style/BlackMediumText"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile"
        />

    <TextView
        android:id="@+id/tv_upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4시간 전"
        style="@style/BlackLightText"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        />

    <TextView
        android:id="@+id/tv_board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_tools_tv_content"
        style="@style/BlackLightText"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_board_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_content"
        app:layout_constraintStart_toStartOf="@+id/tv_board_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_board_content"
        />

    <ToggleButton
        android:id="@+id/btn_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_at"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/vp_board_img"
        app:layout_constraintStart_toStartOf="@+id/vp_board_img"
        />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_at"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/btn_like"
        app:layout_constraintTop_toTopOf="@+id/btn_like"
        />

    <ToggleButton
        android:id="@+id/btn_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_at"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_comment"
        />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/ci_board_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ci_drawable="@drawable/custom_circle_indicator_main_color"
        app:layout_constraintTop_toTopOf="@+id/btn_bookmark"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bookmark"
        app:layout_constraintStart_toStartOf="@+id/vp_board_img"
        app:layout_constraintEnd_toEndOf="@+id/vp_board_img"
        />
</androidx.constraintlayout.widget.ConstraintLayout>